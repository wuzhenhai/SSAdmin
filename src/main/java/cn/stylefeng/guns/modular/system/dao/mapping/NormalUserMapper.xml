<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.stylefeng.guns.modular.system.dao.NormalUserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.stylefeng.guns.modular.system.model.NormalUser">
        <id column="id" property="id" />
        <result column="avatar" property="avatar" />
        <result column="account" property="account" />
        <result column="password" property="password" />
        <result column="salt" property="salt" />
        <result column="name" property="name" />
        <result column="birthday" property="birthday" />
        <result column="sex" property="sex" />
        <result column="email" property="email" />
        <result column="phone" property="phone" />
        <result column="roleid" property="roleid" />
        <result column="deptid" property="deptid" />
        <result column="status" property="status" />
        <result column="createtime" property="createtime" />
        <result column="version" property="version" />
        <result column="deptstr" property="deptstr" />
        <result column="idcard" property="idcard" />
        <result column="married" property="married" />
        <result column="edu" property="edu" />
        <result column="address" property="address" />
        <result column="believetime" property="believetime" />
        <result column="baptizedtime" property="baptizedtime" />
        <result column="family" property="family" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, avatar, account, password, salt, name, birthday, sex, email, phone, roleid, deptid, status, createtime, version, deptstr, idcard, married, edu, address, believetime, baptizedtime, family
    </sql>

    <select id="selectUsers" resultType="map">
        select
        <include refid="Base_Column_List" />
        from sys_normal_user
        where status != 3
        <if test="name != null and name != ''">
            and (phone like CONCAT('%',#{name},'%')
            or account like CONCAT('%',#{name},'%')
            or name like CONCAT('%',#{name},'%'))
        </if>

        <if test="beginTime != null and beginTime != '' and endTime != null and endTime != ''">
            and (createTime between CONCAT(#{beginTime},' 00:00:00') and CONCAT(#{endTime},' 23:59:59'))
        </if>
    </select>

    <update id="setStatus">
        update sys_normal_user set status = #{status} where id =
        #{userid}
    </update>


    <select id="getByAccount" resultType="cn.stylefeng.guns.modular.system.model.User">
        select
        <include refid="Base_Column_List" />
        from sys_normal_user where account = #{account} and status != 3
    </select>
</mapper>
